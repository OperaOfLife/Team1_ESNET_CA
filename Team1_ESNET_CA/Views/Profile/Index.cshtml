
@{
    ViewData["Title"] = "Index";
    var cust = (List<Customer>)ViewData["Profile"];
}


@section Scripts{ 
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
<script src="~/js/Script_Register.js"></script>

    <link rel="stylesheet" href="bootstrap-4.0.0-dist/css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="bootstrap-4.0.0-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/Style_Register.css">

    }


<body>


    <div class="container">
        <div class="row justify-content-center my-auto align-items-center">
            <div class="px-xl-5 py-4">
                <h4 class="text-capitalize">Profile</h4>
                <form method="post" id="form" action="/Profile/Index">
                    <div class="form-row ">
                        <div class="col-lg-6 ">
                            <label>Email:</label>
                        </div>
                        <div class="col-lg-6">
                            <label> @ViewData["Username"]</label>
                        </div>
                    </div>
                    <div class="form-row ">
                        <div class="col-lg-6 ">
                            <label>First Name:</label>
                        </div>
                        <div class="col-lg-6">
                            <input type="text" id="txtFName" value=@ViewData["First_Name"]>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-lg-6">
                            <label>Last Name:</label>
                        </div>
                        <div class="col-lg-6">
                            <input type="text" id="txtLName" value=@ViewData["Last_Name"]>
                        </div>
                    </div>


                    <div class="form-row">
                        <div class="col-lg-6">
                            <label>Mobile:</label>
                        </div>

                        <div class="col-lg-6">
                            <input type="text" id="txtMobile" value=@ViewData["Mobile"]>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-lg-12">
                            <button type="submit" class="btn mt-3 mb-3" tabindex="7" id="btnUpdate">Update</button>
                        </div>
                    </div>
                    <div class="form-row my-auto justify-content-center align-items-center">
                        <div class="col-lg-12 " id="error_msg">
                            @ViewData["errmsg"]
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    </body>